@model IEnumerable<Rental>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PickUpTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HadBooking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OverdueTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnedLate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleDamaged)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PickUpTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HadBooking)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OverdueTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnedLate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleDamaged)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
